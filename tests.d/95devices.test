#!/bin/sh

create () {
    cd $1
    set -e
    
    sudo mknod devzero c 3 3
    sudo mknod devvn0 b 1 0
}

compare () {
    set -e
    test "`stat -f '%HT:%r' $1`" = "`stat -f '%HT:%r' $2`"
}

verify () {
    cd $1
    set -e
    
    test -c ./devzero
    compare ./devzero $2/devzero
    
    test -b ./devvn0
    compare ./devvn0 $2/devvn0
}

clean () {
    true
}
